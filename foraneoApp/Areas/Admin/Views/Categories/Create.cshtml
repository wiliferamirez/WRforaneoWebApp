 @model foraneoApp.Models.Category;
 
 @{
     ViewData["Title"] = "Create Category";
 }
 <br/>
 <br/>
 <h3 class="text-center">Create Category</h3>
 <form method="POST" asp-action="Create">
     <div class="row px-2 offset-1 border">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="col-10 mt-4 mx-auto">
             <div class="form-group row ">
                 <div class="col-4">
                     <label class="col-form-label">
                         <label asp-for="categoryName"></label>
                     </label>
                 </div>
                 <div class="col-8">
                     <input asp-for="categoryName" class="form-control" placeholder="Enter category name"/>
                     <span asp-validation-for="categoryName" class="text-danger"></span>
                 </div>
             </div>
             <br/>
             <div class="form-group row ">
                 <div class="col-4">
                     <label class="col-form-label">
                         <label asp-for="Order"></label>
                     </label>
                 </div>
                 <div class="col-8">
                     <input asp-for="Order" class="form-control" placeholder="Enter order"/>
                     <span asp-validation-for="Order" class="text-danger"></span>
                 </div>
             </div>
         </div>
         <div class="form-group row">
             <div class="col-8 mx-auto">
                 <partial name="_ViewBackCreate"/>
             </div>
         </div>
     </div>
 </form>