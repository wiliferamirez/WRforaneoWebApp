@{
ViewData["Title"] = "Events List";
}

<div class="container py-4">
    <div class="row">
        <div class="col-6">
            <h2>Events List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Events" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Event
            </a>
        </div>
    </div>

    <div class="card shadow border-0 mt-4">
        <div class="card-body">
            <table id="tblEvent" class="table table-striped table-bordered" style="width:100%">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Category</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>StartDate</th>
                    <th>CreationDate</th>
                    <th>Actions</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/js/event.js"></script>
}