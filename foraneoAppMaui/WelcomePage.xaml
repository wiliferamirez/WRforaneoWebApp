<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="foraneoAppMaui.WelcomePage"
             Title="WelcomePage">
    <StackLayout Padding="20">
        <Label Text="Welcome to ForaneoApp!"
               FontSize="24"
               HorizontalOptions="Center" />
        <Label x:Name="UserNameLabel"
               Text="Hello, User!"
               HorizontalOptions="Center" />
        <Button Text="Logout" Clicked="OnLogoutClicked" />

        <StackLayout Spacing="15" VerticalOptions="CenterAndExpand">
            <Button Text="Categories" Clicked="OnCategoriesClicked"/>
            <Button Text="Events" Clicked="OnEventsClicked"/>
        </StackLayout>

    </StackLayout>
</ContentPage>
